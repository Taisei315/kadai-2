<h1><strong>Editing Book</strong></h1>
<% if @book.errors.any? %>
<div id="error">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:<br></h2>
  <ul><% @book.errors.full_messages.each do |message| %>
<li><%= message %></li>
<% end %>
<% end %></ul></div>
<%= form_with model:@book, local:true do |f| %>
<div class="field"><%= f.label :title %>
<%= f.text_field :title %></div>
<div class="field"><%= f.label :body %>
<%= f.text_field :body %></div>
<div class="field"><%= f.submit 'Update Book' %></div>
<p><%= link_to "show", book_path(@book.id) %>
|
<%= link_to "Back", "/books" %></p>

<%end%>
